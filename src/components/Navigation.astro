---
const navItems = [
  { href: '/', label: 'Home' },
  { href: '/team-stats', label: 'Team Stats' },
  { href: '/player-reviews', label: 'Player Reviews' },
  { href: '/game-recaps', label: 'Game Recaps' },
  { href: '/blog', label: 'Blog' }
];
---

<nav class="bg-[#0A1A2F] text-white shadow-lg">
  <div class="container mx-auto px-4 py-4">
    <div class="flex justify-between items-center">
      <a href="/" class="text-2xl font-bold text-[#A8E6CF]">CourtVision Insights</a>
      
      <!-- Desktop Menu -->
      <div class="hidden md:flex gap-6">
        {navItems.map((item) => (
          <a 
            href={item.href} 
            class="hover:text-[#A8E6CF] transition-colors duration-200"
          >
            {item.label}
          </a>
        ))}
      </div>
      
      <!-- Mobile Menu Button -->
      <button id="mobile-menu-button" class="md:hidden text-white">
        <i class="fas fa-bars text-2xl"></i>
      </button>
    </div>
    
    <!-- Mobile Menu (hidden by default) -->
    <div id="mobile-menu" class="hidden md:hidden mt-4 flex flex-col gap-4 pb-4">
      {navItems.map((item) => (
        <a 
          href={item.href} 
          class="hover:text-[#A8E6CF] transition-colors duration-200 py-2 border-b border-[#0D2A4A]"
        >
          {item.label}
        </a>
      ))}
    </div>
  </div>
</nav>

<!-- Client-side JavaScript for mobile toggle -->
<script>
  const button = document.getElementById('mobile-menu-button');
  const menu = document.getElementById('mobile-menu');
  button?.addEventListener('click', () => {
    menu?.classList.toggle('hidden');
  });
</script>

<style>
  @import url('https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css');
</style>