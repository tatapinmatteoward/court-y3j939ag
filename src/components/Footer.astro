---
const currentYear = new Date().getFullYear();
const socialLinks = [
  { icon: 'fab fa-twitter', url: '#' },
  { icon: 'fab fa-facebook', url: '#' },
  { icon: 'fab fa-instagram', url: '#' },
  { icon: 'fab fa-linkedin', url: '#' }
];
---

<footer class="bg-[#0A1A2F] text-[#A8E6CF] py-8">
  <div class="container mx-auto px-4 text-center">
    <p class="mb-4">&copy; {currentYear} CourtVision Insights. All rights reserved.</p>
    <div class="flex justify-center gap-4">
      {socialLinks.map((link) => (
        <a href={link.url} class="text-[#A8E6CF] hover:text-white transition-colors duration-300">
          <i class={link.icon}></i>
        </a>
      ))}
    </div>
  </div>
</footer>