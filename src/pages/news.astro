---
import Layout from '../layouts/Layout.astro';

const pageTitle = "Latest Basketball Buzz: HoopsHustle Daily News";
const pageDescription = "Dive into the hottest updates from the NBA and beyond – trades, injuries, standout performances, and insider analysis to fuel your basketball passion.";

const breakingNews = [
  {
    id: 1,
    title: "LeBron James Drops Career Milestone",
    summary: "In a thrilling overtime win against the Lakers' rivals, King James surpassed another scoring record. Is this the start of another legendary playoff run?",
    category: "Player News"
  },
  {
    id: 2,
    title: "Trade Rumors Swirl Around Phoenix Suns",
    summary: "Whispers of a blockbuster deal involving Devin Booker have Suns fans on edge. Could this reshape the Western Conference?",
    category: "Trading"
  },
  {
    id: 3,
    title: "Rookie Sensation Shines in Debut",
    summary: "A young star makes an immediate impact with a dazzling performance that has analysts buzzing about their future potential.",
    category: "Rookies"
  },
  {
    id: 4,
    title: "Injury Report: Big Names Out",
    summary: "Several key players are sidelined with various injuries affecting their teams' playoff hopes for this season.",
    category: "Injuries"
  }
];

const featuredStories = [
  {
    id: 5,
    title: "NBA Schedule Revealed",
    summary: "The highly anticipated season schedule is finally here with plenty of marquee matchups on opening night.",
    category: "Schedule"
  },
  {
    id: 6,
    title: "Conference Preview: Who's Ready to Compete?",
    summary: "As the season approaches, we analyze which teams are built to make a serious run at the championship.",
    category: "Analysis"
  }
];
---

<Layout title={pageTitle} description={pageDescription}>
  <!-- Hero Section -->
  <div class="relative bg-gradient-to-r from-[#FF6B35] via-[#FF8C69] to-[#FF6B35] py-20 overflow-hidden">
    <div class="absolute inset-0 bg-black bg-opacity-20"></div>
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-3xl">
        <span class="inline-block px-4 py-1 bg-white text-[#FF6B35] font-bold rounded-full mb-4">BREAKING NEWS</span>
        <h1 class="text-5xl md:text-6xl font-bold text-white leading-tight mb-4">
          Latest Basketball Buzz
        </h1>
        <p class="text-xl text-white mb-8">
          Dive into the hottest updates from the NBA and beyond – trades, injuries, standout performances, and insider analysis to fuel your basketball passion.
        </p>
        <div class="flex flex-wrap gap-4">
          <button class="px-6 py-3 bg-white text-[#FF6B35] font-bold rounded-full hover:bg-opacity-90 transition duration-300 transform hover:-translate-y-1">
            <i class="fas fa-play-circle mr-2"></i> Watch Highlights
          </button>
          <button class="px-6 py-3 bg-transparent border-2 border-white text-white font-bold rounded-full hover:bg-white hover:text-[#FF6B35] transition duration-300">
            <i class="fas fa-newspaper mr-2"></i> Read Latest
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- Breaking News Section -->
  <section class="py-16 bg-gray-50">
    <div class="container mx-auto px-4">
      <div class="flex items-center justify-between mb-10">
        <h2 class="text-3xl font-bold text-gray-900">Breaking News</h2>
        <div class="flex space-x-2">
          <span class="w-3 h-3 bg-[#FF6B35] rounded-full animate-pulse"></span>
          <span class="w-3 h-3 bg-[#FF6B35] rounded-full animate-pulse delay-100"></span>
          <span class="w-3 h-3 bg-[#FF6B35] rounded-full animate-pulse delay-200"></span>
        </div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6">
        {breakingNews.map((news) => (
          <div key={news.id} class="bg-white rounded-xl shadow-lg overflow-hidden transform transition duration-500 hover:scale-105 hover:shadow-2xl">
            <div class="h-48 bg-gradient-to-r from-[#00C8D7] to-[#00A8B0] flex items-center justify-center">
              <i class="fas fa-bullhorn text-white text-5xl"></i>
            </div>
            <div class="p-6">
              <span class="inline-block px-3 py-1 bg-[#FF6B35] text-white text-sm font-bold rounded-full mb-3">
                {news.category}
              </span>
              <h3 class="text-xl font-bold text-gray-900 mb-3">{news.title}</h3>
              <p class="text-gray-600 mb-4">{news.summary}</p>
              <button class="text-[#FF6B35] font-bold flex items-center">
                Read more
                <i class="fas fa-arrow-right ml-2 text-sm"></i>
              </button>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Featured Stories Section -->
  <section class="py-16 bg-white">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-bold text-gray-900 mb-4">Featured Stories</h2>
        <div class="w-24 h-1 bg-[#00C8D7] mx-auto"></div>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-8">
        {featuredStories.map((story) => (
          <div key={story.id} class="group">
            <div class="relative overflow-hidden rounded-2xl shadow-xl transform transition duration-700 group-hover:scale-105">
              <div class="h-64 bg-gradient-to-r from-[#FF6B35] to-[#FF8C69] flex items-center justify-center">
                <i class="fas fa-trophy text-white text-6xl"></i>
              </div>
              <div class="absolute inset-0 bg-gradient-to-t from-black to-transparent opacity-80"></div>
              <div class="absolute bottom-0 left-0 p-6 text-white">
                <span class="inline-block px-3 py-1 bg-[#00C8D7] text-white text-sm font-bold rounded-full mb-3">
                  {story.category}
                </span>
                <h3 class="text-2xl font-bold mb-2">{story.title}</h3>
                <p class="mb-4">{story.summary}</p>
                <button class="text-white font-bold flex items-center">
                  Read full story
                  <i class="fas fa-arrow-right ml-2"></i>
                </button>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Trending Section -->
  <section class="py-16 bg-gradient-to-r from-[#00C8D7] to-[#00A8B0] text-white">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl font-bold mb-4">Trending Topics</h2>
        <div class="w-24 h-1 bg-[#FF6B35] mx-auto"></div>
      </div>

      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        <div class="bg-white bg-opacity-10 backdrop-blur-sm rounded-2xl p-8 text-center transform transition duration-500 hover:scale-105">
          <div class="text-5xl mb-4">
            <i class="fas fa-users"></i>
          </div>
          <h3 class="text-xl font-bold mb-3">Player Rankings</h3>
          <p class="mb-4">See who's climbing the leaderboard with new stats and performance metrics</p>
          <button class="px-4 py-2 bg-white text-[#00C8D7] font-bold rounded-full hover:bg-opacity-90 transition duration-300">
            View Rankings
          </button>
        </div>

        <div class="bg-white bg-opacity-10 backdrop-blur-sm rounded-2xl p-8 text-center transform transition duration-500 hover:scale-105">
          <div class="text-5xl mb-4">
            <i class="fas fa-chart-line"></i>
          </div>
          <h3 class="text-xl font-bold mb-3">Team Analysis</h3>
          <p class="mb-4">Deep dives into team strategies and how they stack up against conference leaders</p>
          <button class="px-4 py-2 bg-white text-[#00C8D7] font-bold rounded-full hover:bg-opacity-90 transition duration-300">
            Explore Data
          </button>
        </div>

        <div class="bg-white bg-opacity-10 backdrop-blur-sm rounded-2xl p-8 text-center transform transition duration-500 hover:scale-105">
          <div class="text-5xl mb-4">
            <i class="fas fa-microphone-alt"></i>
          </div>
          <h3 class="text-xl font-bold mb-3">Podcast Highlights</h3>
          <p class="mb-4">Listen to the latest episodes featuring expert commentary and deep analysis</p>
          <button class="px-4 py-2 bg-white text-[#00C8D7] font-bold rounded-full hover:bg-opacity-90 transition duration-300">
            Listen Now
          </button>
        </div>
      </div>
    </div>
  </section>

  <!-- Newsletter CTA -->
  <section class="py-20 bg-gray-900">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-4xl font-bold text-white mb-6">Stay Ahead of the Game</h2>
      <p class="text-xl text-gray-300 max-w-2xl mx-auto mb-10">
        Subscribe to our daily newsletter for exclusive content, breaking news, and insider analysis delivered straight to your inbox.
      </p>
      <form class="max-w-xl mx-auto flex">
        <input 
          type="email" 
          placeholder="Enter your email" 
          class="flex-grow px-6 py-4 rounded-l-full focus:outline-none text-gray-900"
        />
        <button 
          type="submit" 
          class="px-8 py-4 bg-[#FF6B35] text-white font-bold rounded-r-full hover:bg-[#e55a2b] transition duration-300"
        >
          Subscribe
        </button>
      </form>
    </div>
  </section>
</Layout>

<style>
  @keyframes pulse {
    0% { opacity: 0.5; }
    50% { opacity: 1; }
    100% { opacity: 0.5; }
  }

  .delay-100 {
    animation-delay: 0.1s;
  }

  .delay-200 {
    animation-delay: 0.2s;
  }

  .animate-pulse {
    animation: pulse 2s cubic-bezier(0.4, 0, 0.6, 1) infinite;
  }
</style>