---
import Layout from '../layouts/Layout.astro';

const pageTitle = "Home";
const pageDescription = "Welcome to CourtVision Insights, where we unlock basketball excellence through advanced analytics and captivating stories. Dive into data-driven insights for fans, coaches, and analysts.";

const features = [
  {
    title: "Advanced Metrics",
    description: "Player efficiency ratings, shot charts, and predictive models",
    icon: "chart-line"
  },
  {
    title: "In-Depth Stories",
    description: "Behind-the-scenes analysis of iconic plays and emerging talents",
    icon: "book"
  },
  {
    title: "Fan Engagement Tools",
    description: "Interactive dashboards to explore your favorite teams",
    icon: "users"
  }
];

const insights = [
  {
    title: "The Evolution of Shot Selection in the NBA",
    excerpt: "How analytics are reshaping scoring patterns across the league",
    readTime: "5 min read"
  },
  {
    title: "Defensive Efficiency: Beyond the Box Score",
    excerpt: "Understanding the impact of defensive metrics on team success",
    readTime: "7 min read"
  },
  {
    title: "Rising Stars: Analytics-Driven Talent Identification",
    excerpt: "How data is revealing the next generation of basketball champions",
    readTime: "6 min read"
  }
];
---

<Layout title={pageTitle} description={pageDescription}>
  <!-- Hero Section -->
  <div class="relative bg-gradient-to-br from-[#0A1A2F] to-[#1a3a5f] overflow-hidden">
    <div class="absolute inset-0 opacity-10">
      <div class="absolute top-0 left-0 w-full h-full bg-[radial-gradient(#A8E6CF_1px,transparent_1px)] [background-size:20px_20px]"></div>
    </div>
    <div class="container mx-auto px-4 py-24 md:py-32 relative z-10">
      <div class="max-w-3xl">
        <span class="inline-block px-4 py-1 bg-[#A8E6CF] text-[#0A1A2F] rounded-full text-sm font-semibold mb-6">
          <i class="fas fa-chart-bar mr-2"></i> DATA DRIVEN INSIGHTS
        </span>
        <h1 class="text-4xl md:text-6xl font-bold text-white leading-tight mb-6">
          Unlocking Basketball Excellence Through Analytics and Stories
        </h1>
        <p class="text-xl text-gray-300 mb-10 max-w-2xl">
          Welcome to CourtVision Insights, your premier destination for sophisticated basketball analytics. We blend cutting-edge data visualization with compelling narratives to elevate your understanding of the game.
        </p>
        <div class="flex flex-col sm:flex-row gap-4">
          <button class="px-8 py-4 bg-[#A8E6CF] text-[#0A1A2F] font-semibold rounded-lg hover:bg-[#8cd8b9] transition duration-300 transform hover:-translate-y-1">
            Explore Insights
          </button>
          <button class="px-8 py-4 border-2 border-[#A8E6CF] text-[#A8E6CF] font-semibold rounded-lg hover:bg-[#A8E6CF] hover:text-[#0A1A2F] transition duration-300">
            View Analytics
          </button>
        </div>
      </div>
    </div>
  </div>

  <!-- Why CourtVision Section -->
  <section class="py-20 bg-gradient-to-b from-[#0A1A2F] to-[#0A1A2F]">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">Why CourtVision?</h2>
        <div class="w-24 h-1 bg-[#A8E6CF] mx-auto"></div>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {features.map((feature, index) => (
          <div key={index} class="bg-[#0F2A45] p-8 rounded-xl border border-[#1a3a5f] hover:border-[#A8E6CF] transition duration-300 group">
            <div class="w-16 h-16 rounded-full bg-[#1a3a5f] flex items-center justify-center mb-6 group-hover:bg-[#A8E6CF] transition duration-300">
              <i class={`fas ${feature.icon} text-2xl text-[#A8E6CF] group-hover:text-[#0A1A2F]`}></i>
            </div>
            <h3 class="text-xl font-bold text-white mb-4">{feature.title}</h3>
            <p class="text-gray-300">{feature.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  <!-- Featured Insights Section -->
  <section class="py-20 bg-gradient-to-b from-[#0A1A2F] to-[#0F2A45]">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">Featured Insights</h2>
        <p class="text-gray-400 max-w-2xl mx-auto">Explore our latest research and analysis on the evolving landscape of basketball strategy and performance</p>
        <div class="w-24 h-1 bg-[#A8E6CF] mx-auto mt-4"></div>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        {insights.map((insight, index) => (
          <div key={index} class="bg-gradient-to-b from-[#0F2A45] to-[#1a3a5f] rounded-xl overflow-hidden border border-[#1a3a5f] hover:border-[#A8E6CF] transition duration-300 group">
            <div class="p-8">
              <div class="flex justify-between items-start mb-4">
                <span class="px-3 py-1 bg-[#A8E6CF] text-[#0A1A2F] text-xs font-semibold rounded-full">
                  {insight.readTime}
                </span>
                <i class="fas fa-arrow-right text-[#A8E6CF] group-hover:translate-x-1 transition duration-300"></i>
              </div>
              <h3 class="text-xl font-bold text-white mb-4 group-hover:text-[#A8E6CF] transition duration-300">{insight.title}</h3>
              <p class="text-gray-300 mb-6">{insight.excerpt}</p>
              <button class="text-[#A8E6CF] font-semibold flex items-center group-hover:text-white transition duration-300">
                Read Full Analysis
                <i class="fas fa-chevron-right ml-2 text-sm"></i>
              </button>
            </div>
          </div>
        ))}
      </div>

      <div class="text-center mt-12">
        <button class="px-8 py-4 border-2 border-[#A8E6CF] text-[#A8E6CF] font-semibold rounded-lg hover:bg-[#A8E6CF] hover:text-[#0A1A2F] transition duration-300">
          View All Insights
        </button>
      </div>
    </div>
  </section>

  <!-- Stats Section -->
  <section class="py-20 bg-gradient-to-r from-[#0A1A2F] to-[#0F2A45]">
    <div class="container mx-auto px-4">
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8 text-center">
        <div class="p-6">
          <div class="text-5xl font-bold text-[#A8E6CF] mb-2">50K+</div>
          <div class="text-gray-300">Monthly Readers</div>
        </div>
        <div class="p-6">
          <div class="text-5xl font-bold text-[#A8E6CF] mb-2">150+</div>
          <div class="text-gray-300">Team Analytics</div>
        </div>
        <div class="p-6">
          <div class="text-5xl font-bold text-[#A8E6CF] mb-2">24/7</div>
          <div class="text-gray-300">Data Access</div>
        </div>
        <div class="p-6">
          <div class="text-5xl font-bold text-[#A8E6CF] mb-2">85%</div>
          <div class="text-gray-300">Accuracy Rate</div>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="py-20 bg-gradient-to-br from-[#0A1A2F] to-[#1a3a5f]">
    <div class="container mx-auto px-4 text-center">
      <div class="max-w-3xl mx-auto">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">Join the Analytics Revolution</h2>
        <p class="text-xl text-gray-300 mb-10">
          Whether you're a die-hard supporter or a professional scout, our minimalist, professional approach delivers clarity without the clutter.
        </p>
        <div class="flex flex-col sm:flex-row justify-center gap-4">
          <button class="px-8 py-4 bg-[#A8E6CF] text-[#0A1A2F] font-semibold rounded-lg hover:bg-[#8cd8b9] transition duration-300 transform hover:-translate-y-1">
            Get Started Today
          </button>
          <button class="px-8 py-4 border-2 border-[#A8E6CF] text-[#A8E6CF] font-semibold rounded-lg hover:bg-[#A8E6CF] hover:text-[#0A1A2F] transition duration-300">
            Learn More
          </button>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  @keyframes float {
    0% { transform: translateY(0px); }
    50% { transform: translateY(-10px); }
    100% { transform: translateY(0px); }
  }

  .floating {
    animation: float 6s ease-in-out infinite;
  }

  .gradient-border {
    position: relative;
    border-radius: 12px;
  }

  .gradient-border::before {
    content: '';
    position: absolute;
    top: -2px;
    left: -2px;
    right: -2px;
    bottom: -2px;
    background: linear-gradient(45deg, #A8E6CF, #0A1A2F, #A8E6CF);
    border-radius: 15px;
    z-index: -1;
    animation: gradient-animation 3s linear infinite;
    background-size: 400% 400%;
  }

  @keyframes gradient-animation {
    0% { background-position: 0% 50%; }
    50% { background-position: 100% 50%; }
    100% { background-position: 0% 50%; }
  }

  .fade-in {
    animation: fadeIn 0.8s ease-out;
  }

  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }
</style>