---
import Layout from '../layouts/Layout.astro';

const pageTitle = "Player Reviews | CourtVision Insights";
const pageDescription = "Explore expert player reviews blending advanced basketball analytics with compelling narratives. Discover insights on NBA stars' performance, potential, and impact on the game.";
const featuredReviews = [
  {
    id: 1,
    playerName: "LeBron James",
    position: "SF/PG",
    season: "2023-24 Season",
    summary: "LeBron's ageless dominance continues, weaving together statistical excellence with unparalleled court vision.",
    category: "Elite Performance",
    icon: "fa-crown"
  },
  {
    id: 2,
    playerName: "Luka Dončić",
    position: "PG",
    season: "2023-24 Season",
    summary: "The rising star showcases exceptional dual-threat capabilities with his elite scoring and playmaking.",
    category: "Rising Star",
    icon: "fa-bolt"
  },
  {
    id: 3,
    playerName: "Giannis Antetokounmpo",
    position: "PF",
    season: "2023-24 Season",
    summary: "The Greek Freak's combination of athleticism, versatility, and defensive prowess redefines modern basketball.",
    category: "Dominant Force",
    icon: "fa-running"
  }
];
const whyOurReviews = [
  {
    title: "Data-Driven Depth",
    description: "Leveraging metrics like PER, true shooting percentage, and advanced tracking data to reveal hidden strengths and weaknesses.",
    icon: "fa-chart-line"
  },
  {
    title: "Narrative Insight",
    description: "Each review weaves statistical prowess with personal journeys, from rookie breakthroughs to veteran legacies.",
    icon: "fa-book-open"
  },
  {
    title: "Expert Analysis",
    description: "Crafted by seasoned analysts who blend quantitative rigor with qualitative storytelling.",
    icon: "fa-user-tie"
  }
];
---

<Layout title={pageTitle} description={pageDescription}>
  {/* Hero Section */}
  <div class="relative bg-gradient-to-br from-[#0A1A2F] to-[#1a2c42] py-24 overflow-hidden">
    <div class="absolute inset-0 opacity-10">
      <div class="absolute top-0 left-0 w-full h-full bg-[radial-gradient(circle_at_50%_50%,rgba(168,230,207,0.1)_1px,transparent_1px)] bg-[length:50px_50px]"></div>
    </div>
    
    <div class="container mx-auto px-4 relative z-10">
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-4xl md:text-6xl font-bold text-white mb-6 tracking-tight">
          Player Reviews
        </h1>
        <p class="text-xl md:text-2xl text-[#A8E6CF] mb-8 font-light">
          Unlocking Basketball Excellence Through Analytics and Stories
        </p>
        <p class="text-gray-300 text-lg max-w-2xl mx-auto leading-relaxed">
          Explore expert player reviews blending advanced basketball analytics with compelling narratives. 
          Discover insights on NBA stars' performance, potential, and impact on the game.
        </p>
      </div>
    </div>
  </div>

  {/* Why Our Reviews Section */}
  <section class="py-20 bg-gradient-to-b from-[#0A1A2F] to-[#0A1A2F]">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">Why Our Reviews Stand Out</h2>
        <div class="w-24 h-1 bg-[#A8E6CF] mx-auto rounded-full"></div>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {whyOurReviews.map((review, index) => (
          <div key={index} class="bg-[#12273F] rounded-xl p-8 shadow-lg hover:shadow-xl transition-all duration-300 transform hover:-translate-y-2 border border-[#1a3a5f]">
            <div class="text-[#A8E6CF] text-4xl mb-6">
              <i class={`fas ${review.icon}`}></i>
            </div>
            <h3 class="text-xl font-bold text-white mb-4">{review.title}</h3>
            <p class="text-gray-300 leading-relaxed">{review.description}</p>
          </div>
        ))}
      </div>
    </div>
  </section>

  {/* Featured Reviews Section */}
  <section class="py-20 bg-[#0A1A2F]">
    <div class="container mx-auto px-4">
      <div class="text-center mb-16">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">Featured Reviews</h2>
        <p class="text-[#A8E6CF] text-lg">In-depth analyses of basketball's elite talent</p>
        <div class="w-24 h-1 bg-[#A8E6CF] mx-auto rounded-full mt-4"></div>
      </div>
      
      <div class="grid grid-cols-1 lg:grid-cols-3 gap-8">
        {featuredReviews.map((review) => (
          <div key={review.id} class="group">
            <div class="bg-gradient-to-br from-[#12273F] to-[#1a3a5f] rounded-2xl overflow-hidden shadow-xl border border-[#1a3a5f] transition-all duration-300 hover:shadow-2xl transform hover:-translate-y-3">
              <div class="p-6">
                <div class="flex justify-between items-start mb-4">
                  <div>
                    <h3 class="text-2xl font-bold text-white">{review.playerName}</h3>
                    <p class="text-[#A8E6CF] font-semibold">{review.position}</p>
                  </div>
                  <div class="bg-[#A8E6CF] text-[#0A1A2F] rounded-full p-2">
                    <i class={`fas ${review.icon}`}></i>
                  </div>
                </div>
                
                <div class="mb-6">
                  <span class="inline-block bg-[#0A1A2F] text-[#A8E6CF] text-xs px-3 py-1 rounded-full font-medium mb-3">
                    {review.category}
                  </span>
                  <p class="text-gray-300 italic">Updated: {review.season}</p>
                </div>
                
                <p class="text-gray-300 leading-relaxed mb-6">
                  {review.summary}
                </p>
                
                <button class="w-full bg-[#A8E6CF] text-[#0A1A2F] font-bold py-3 rounded-lg hover:bg-[#8bd5b7] transition-colors duration-300 flex items-center justify-center">
                  Read Full Review
                  <i class="fas fa-arrow-right ml-2 text-sm"></i>
                </button>
              </div>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>

  {/* CTA Section */}
  <section class="py-20 bg-gradient-to-r from-[#0A1A2F] to-[#12273F]">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl md:text-4xl font-bold text-white mb-6">Join the Analytics Revolution</h2>
        <p class="text-xl text-gray-300 mb-10 max-w-2xl mx-auto leading-relaxed">
          Get exclusive insights into how data transforms basketball storytelling. 
          Subscribe to our premium player analysis reports.
        </p>
        
        <div class="flex flex-col sm:flex-row justify-center gap-4">
          <button class="bg-[#A8E6CF] text-[#0A1A2F] font-bold px-8 py-4 rounded-lg hover:bg-[#8bd5b7] transition-colors duration-300 shadow-lg">
            Subscribe Now
          </button>
          <button class="bg-transparent border-2 border-[#A8E6CF] text-[#A8E6CF] font-bold px-8 py-4 rounded-lg hover:bg-[#A8E6CF]/10 transition-colors duration-300">
            View Sample Reports
          </button>
        </div>
      </div>
    </div>
  </section>
</Layout>

<style>
  @import url('https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css');
  
  body {
    font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
  }
  
  .hover\:translate-y-3:hover {
    transform: translateY(-3px);
  }
  
  .transition-transform {
    transition: transform 0.3s ease;
  }
  
  .transform {
    transform: translateZ(0);
  }
</style>